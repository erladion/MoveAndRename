<Window x:Class="MoveAndRename.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoveAndRename"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="400" Width="400">
    <Grid Name="ControlsGrid" SizeChanged="Grid_SizeChanged">
        <ListView x:Name="listView" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="100" PreviewMouseLeftButtonUp="listView_ItemActivate">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Name="Content" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" Width="267"/>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" SelectedItemChanged="treeView_SelectedItemChanged"/>

    </Grid>
</Window>
